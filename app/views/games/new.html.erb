<div class="letter">
  <% @letters.each do |letter|%>
      <%= letter.capitalize %>
    <% end %>
</div>

<form action="/score">
  <input type="text" name="word" placeholder="Type your word here!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit">
  <input type="text" name="letters" value="<%= @letters.join %>">
</form>

